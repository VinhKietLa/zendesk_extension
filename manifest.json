{
    "manifest_version": 3,
    "name": "Zendesk Helper",
    "version": "1.0",
    "description": "An extension to manage Zendesk tickets efficiently.",
    "permissions": [
      "storage",
      "notifications",
      "alarms",
      "background",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
        "https://*.zendesk.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon16.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  