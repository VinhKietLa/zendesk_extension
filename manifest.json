{
  "manifest_version": 3,
  "name": "Zendesk Helper",
  "version": "1.0",
  "description": "An extension to manage Zendesk tickets efficiently. Includes auto refresh and adding important tickets with browser reminder notifications",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "background"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
